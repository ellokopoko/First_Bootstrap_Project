#carousel-example-generic{class: "carousel slide", "data-ride": "carousel"}
  - nambers = [0..2]
  %ol{class: "carousel-indicators"}
    - for namber in nambers
      - if namber == 0 then status = "active" else status = "" 
      %li{"data-target": '#carousel-example-generic', 'data-slide-to': "#{namber}", class: "#{status}"}
  
  .carousel-inner
    %div{class: 'item active'}
      %img{src: "images/carousel/seattle_skyline.jpg", alt: ""}
      %div{class: "carousel-caption"}
    %div{class: 'item'}
      %img{src: "images/carousel/pottery_finished.jpg", alt: ""}
      %div{class: "carousel-caption"}
    %div{class: 'item'}
      %img{src: "images/carousel/pottery_workshop.jpg", alt: ""}
      %div{class: "carousel-caption"}
        
  %a{class: "left carousel-control", href: "#carousel-example-generic", 'data-slide':"prev"}
    %span{class: "glyphicon glyphicon-chevron-left"}
  %a{class: "right carousel-control", href: "#carousel-example-generic", 'data-slide': "next"}
    %span{class: "glyphicon glyphicon-chevron-right"}